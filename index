                pregunta: "<b>70. NO VA.</b>",
                respuesta: "Respuesta no disponible."
        ];

        // --- Referencias a elementos del DOM ---
        const startContainer = document.getElementById('start-container');
        const answerBtnContainer = document.getElementById('answer-btn-container');
        const feedbackContainer = document.getElementById('feedback-container');
        const nextBtnContainer = document.getElementById('next-btn-container');
        const questionDisplay = document.getElementById('question-display');
        const answerDisplay = document.getElementById('answer-display');
        const progressCounter = document.getElementById('progress-counter');
        const completionMessage = document.getElementById('completion-message');
        const statsDisplay = document.getElementById('stats-display');
        const resetProgressBtn = document.getElementById('reset-progress-btn');

        // --- Variables de estado ---
        let reviewData = [];
        let dueCards = [];
        let currentCard = null;
        let originalDueCount = 0;

        // --- LÓGICA DE SM-2 y la Aplicación ---

        function getTodayString() {
            const today = new Date();
            return today.toISOString().split('T')[0]; // Formato YYYY-MM-DD
        }

        function cargarProgreso() {
            const dataGuardada = localStorage.getItem(CUESTIONARIO_KEY);
            if (dataGuardada) {
                reviewData = JSON.parse(dataGuardada);
            } else {
                // Si no hay datos, inicializamos el progreso para cada pregunta
                reviewData = cuestionarioMaestro
                    .filter(q => !q.pregunta.includes("NO VA"))
                    .map(q => ({
                        id: q.id,
                        easiness: 2.5,  // Factor de facilidad inicial
                        interval: 0,    // Intervalo en días
                        repetitions: 0, // Repeticiones correctas seguidas
                        reviewDate: getTodayString() // La fecha de hoy para que aparezcan la primera vez
                    }));
                guardarProgreso();
            }
        }

        function guardarProgreso() {
            localStorage.setItem(CUESTIONARIO_KEY, JSON.stringify(reviewData));
        }

        function actualizarSM2(cardId, quality) {
            const card = reviewData.find(c => c.id === cardId);
            if (!card) return;

            // El algoritmo SM-2 para actualizar el estado de la tarjeta
            if (quality >= 3) { // Respuesta correcta
                if (card.repetitions === 0) {
                    card.interval = 1;
                } else if (card.repetitions === 1) {
                    card.interval = 6;
                } else {
                    card.interval = Math.ceil(card.interval * card.easiness);
                }
                card.repetitions += 1;
            } else { // Respuesta incorrecta
                card.repetitions = 0;
                card.interval = 1;
            }

            // Actualizar el factor de facilidad
            card.easiness = card.easiness + (0.1 - (5 - quality) * (0.08 + (5 - quality) * 0.02));
            if (card.easiness < 1.3) card.easiness = 1.3;

            // Calcular la nueva fecha de repaso
            const hoy = new Date();
            hoy.setDate(hoy.getDate() + card.interval);
            card.reviewDate = hoy.toISOString().split('T')[0];
        }

        function iniciarSesion() {
            const hoy = getTodayString();
            dueCards = reviewData.filter(card => new Date(card.reviewDate) <= new Date(hoy));
            originalDueCount = dueCards.length;

            startContainer.classList.add('hidden');
            resetProgressBtn.classList.add('hidden');
            statsDisplay.classList.add('hidden');
            
            if (originalDueCount === 0) {
                finalizarSesion();
            } else {
                progressCounter.classList.remove('hidden');
                obtenerSiguientePregunta();
            }
        }
        
        function obtenerSiguientePregunta() {
            questionDisplay.classList.add('hidden');
            answerDisplay.classList.add('hidden');
            feedbackContainer.classList.add('hidden');
            nextBtnContainer.classList.add('hidden');
            
            if (dueCards.length === 0) {
                finalizarSesion();
                return;
            }

            // Seleccionar una tarjeta al azar de las pendientes
            const randomIndex = Math.floor(Math.random() * dueCards.length);
            const cardData = dueCards[randomIndex];
            currentCard = cuestionarioMaestro.find(q => q.id === cardData.id);
            
            actualizarContador();

            questionDisplay.innerHTML = currentCard.pregunta;
            questionDisplay.classList.remove('hidden');
            answerBtnContainer.classList.remove('hidden');
        }

        function mostrarRespuesta() {
            answerDisplay.innerHTML = `<b>Respuesta:</b><br>${currentCard.respuesta}`;
            answerDisplay.classList.remove('hidden');
            
            answerBtnContainer.classList.add('hidden');
            feedbackContainer.classList.remove('hidden');
        }

        function procesarRespuesta(quality) {
            // Mapeamos "Buena" a q=5 y "Mala" a q=2 para el algoritmo
            actualizarSM2(currentCard.id, quality);
            guardarProgreso();

            // Quitar la tarjeta recién respondida de la lista de pendientes de la sesión actual
            dueCards = dueCards.filter(c => c.id !== currentCard.id);
            
            feedbackContainer.classList.add('hidden');
            
            if (dueCards.length > 0) {
                 nextBtnContainer.classList.remove('hidden');
            } else {
                 finalizarSesion();
            }
        }
        
        function actualizarContador() {
            const respondidas = originalDueCount - dueCards.length;
            progressCounter.innerText = `Pregunta ${respondidas + 1} de ${originalDueCount} para hoy`;
        }

        function finalizarSesion() {
            questionDisplay.classList.add('hidden');
            answerDisplay.classList.add('hidden');
            progressCounter.classList.add('hidden');
            nextBtnContainer.classList.add('hidden');
            feedbackContainer.classList.add('hidden');
            answerBtnContainer.classList.add('hidden');
            
            completionMessage.classList.remove('hidden');
            resetProgressBtn.classList.remove('hidden');
            actualizarEstadisticas();
        }

        function actualizarEstadisticas() {
            const hoy = getTodayString();
            const totalCards = reviewData.length;
            const dueToday = reviewData.filter(card => new Date(card.reviewDate) <= new Date(hoy)).length;
            statsDisplay.innerHTML = `Total de preguntas: ${totalCards}.<br>Pendientes para hoy: <b>${dueToday}</b>.`;
            statsDisplay.classList.remove('hidden');
        }

        function resetearProgreso() {
            if (confirm("¿Estás seguro de que quieres borrar todo tu progreso? Esta acción no se puede deshacer.")) {
                localStorage.removeItem(CUESTIONARIO_KEY);
                location.reload();
            }
        }

        // --- Inicialización ---
        document.addEventListener('DOMContentLoaded', () => {
            cargarProgreso();
            actualizarEstadisticas();
            document.getElementById('start-btn').addEventListener('click', iniciarSesion);
            document.getElementById('next-question-btn').addEventListener('click', obtenerSiguientePregunta);
            document.getElementById('show-answer-btn').addEventListener('click', mostrarRespuesta);
        });
    </script>
</body>
</html>
